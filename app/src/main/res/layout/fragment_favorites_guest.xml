<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp">



    <ImageView
        android:id="@+id/imgStar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_halfstar"
        android:tint="@color/favStarColor"
        android:contentDescription="@string/favorites_icon_id"
        android:layout_gravity="center_horizontal"
        tools:ignore="UseAppTint" />


    <TextView
        android:id="@+id/tvFavoritesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:id="@+id/tvFavoritesDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites_subtitle"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>


    <Button
        android:id="@+id/btnLoginfavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorites_button"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
